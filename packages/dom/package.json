{
  "name": "@wordsmith/dom",
  "version": "0.1.0",
  "description": "i18n DOM library using Wordsmith Native",
  "keywords": [
    "wordsmith",
    "i18n",
    "l10n",
    "localization",
    "internationalization",
    "globalization",
    "translation"
  ],
  "author": "Wordsmith",
  "homepage": "https://github.com/wordsmith/wordsmith-javascript/tree/master/packages/dom",
  "license": "Apache-2.0",
  "main": "dist/node.dom.js",
  "browser": "dist/browser.dom.js",
  "types": "dist/node.dom.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "repository": "git://github.com/wordsmith/wordsmith-javascript.git",
  "scripts": {
    "lint": "eslint src/ tests/",
    "build": "NODE_ENV=production webpack --config ./webpack.config.js && cp src/index.d.ts dist/node.dom.d.ts",
    "test": "NODE_ENV=test webpack --config webpack.test.js && nyc --reporter=text mocha --exit dist/test.dom.js --require source-map-support/register && rm -f ./dist/test.*",
    "publish-npm": "npm publish"
  },
  "bugs": {
    "url": "https://github.com/wordsmith/wordsmith-javascript/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/plugin-transform-runtime": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@babel/runtime": "^7.23.8",
    "babel-loader": "^9.1.3",
    "chai": "^5.0.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "glob": "^8.1.0",
    "linkedom": "0.14.18",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.21",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
